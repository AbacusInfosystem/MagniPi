@model MagniPi.Models.PostLogin.Blog.BlogViewModel
@using MagniPiBusinessEntities.Common;

<script src="~/Content/ckeditor/ckeditor.js"></script>

<script src="~/Scripts/Modules/Blog/blog-validation.js"></script>
<script src="~/Scripts/Modules/Blog/blog-event.js"></script>
<script src="~/Scripts/Modules/Blog/blog-method.js"></script>

<div class="content-wrapper">

    <div class="container-fluid">

        @{Html.RenderPartial("_ServerMessage");}

        <!-- Content Header (Page header) -->

        <section class="content-header">
            <h1>
                Blog
            </h1>
            <ol class="breadcrumb">
                <li>Admin</li>
                <li class="active">Blog</li>
            </ol>
        </section>

        <form id="frmAddEditBlog" enctype="multipart/form-data" method="post">
            <section class="content">
                <div class="row">
                    <div id="divScrollContainer" class="col-md-12">
                        <h2 id="" class="page-header">Create Blog</h2>

                        <div class="box box-default">
                            <div class="box-body">

                                <input type="hidden" id="hdnBlogId" name="blog.Blog_Id" value="@Model.blog.Blog_Id" />

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="txtTitle" style="color: #333" class="">Title</label>
                                            <input type="text" class="form-control input-sm" name="blog.Title" id="txtTitle" value="@Model.blog.Title" placeholder="Enter Blog Title" />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="txtBlogContent" style="color: #333" class="">Blog Content</label>
                                            <textarea class="form-control input-sm" id="txtBlogContent" name="blog.Blog_Template" placeholder="Enter Blog Content">@Model.blog.Blog_Template</textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="hdnAttachmentId" class="control-label blog_title">Blog Header Image</label>
                                            <div class="input-group">
                                                <a id="BtnBrowse" class="btn btn-default btn-sm" role="button">
                                                    <i class="fa fa-camera-retro fa-lg"></i> Browse Image
                                                </a>
                                            </div>
                                            <div class="form-group">
                                                <div class="ImagePreviewBox">
                                                    <img src="@Model.blog.Header_Image_Url" id="imgHeaderImage" style="height:180px;width:180px;" />
                                                    <input type="hidden" id="hdnAttachmentId" name="blog.Header_Image" value="@Model.blog.Header_Image" />
                                                    <input type="hidden" id="hdnHeader_Image_Url" name="blog.Header_Image_Url" value="@Model.blog.Header_Image_Url" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="txtAlternativeTxt" style="color: #333" class="">Alternative Text</label>
                                            <input type="text" class="form-control input-sm" name="blog.Alternative_Text" id="txtAlternativeTxt" value="@Model.blog.Alternative_Text" placeholder="Enter Alternative Text" />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="chkIsActive" style="color: #333" class="">Is Active</label><br />
                                            @if (Model.blog.Is_Active)
                                            {
                                                <input type="checkbox" class="" id="chkIsActive" name="chkIs_Active" checked />
                                            }
                                            else
                                            {
                                                <input type="checkbox" class="" id="chkIsActive" name="chkIs_Active" />
                                            }
                                            <input type="hidden" id="hdnIs_Active" name="blog.Is_Active" value="@Model.blog.Is_Active.ToString()" />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="btn-group">
                                            <button type="button" id="btnSave" class="btn btn-success btn-sm">Save</button>
                                            <a href="@Url.Action("Search", "Blog")" type="button" id="btnCancel" class="btn btn-warning btn-sm">Cancel</a>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </section>

        </form>

        <div class="modal fade" id="ImageModal" role="dialog">
            <div class="modal-dialog" style="width:700px">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Images</h4>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="" id="hdnFileType" value="@((int)FileType.Image)" />
                        <div class="row">
                            <div class="col-md-12" id="ShowImages">

                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <div class="row">
                            <div class="col-md-6 pull-right">
                                <div class="btn-group pull-right">
                                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Select Image</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

</div>


<script>

    CKEDITOR.replace('blog.Blog_Template', {
        "extraPlugins": 'imagebrowser',
        //"imageBrowser_listUrl": "/BlogListingImages/" + $("#hdnUserID").val() + ".json",
        "imageBrowser_listUrl": "/UploadFile/Image.json",
        toolbar: [
          ['Cut', 'Copy', 'Paste', 'SpellChecker', 'Undo', 'Redo'],
          ['Scayt'],
          ['Image'],
          ['Maximize'],
            '/',
          ['Bold', 'Italic'],
          ['NumberedList', 'BulletedList', '-', 'Outdent', 'Indent'],
          ['Format']
        ],
        allowedContent:
    'img[!src,alt,width,height]{float};' + // Note no {width,height}
    'h1 h2 div'
    });

    CKEDITOR.replace('blog.Blog_Template');


</script>