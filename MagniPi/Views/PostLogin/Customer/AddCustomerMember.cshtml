@model MagniPi.Models.PostLogin.Customer.CustomerViewModel

<script src="~/Scripts/Modules/Customer/customer-member-validation.js"></script>
<script src="~/Scripts/Modules/Customer/customer-member-event.js"></script>
<script src="~/Scripts/Modules/Customer/customer-member-method.js"></script>

<div class="content-wrapper">

    <div class="container-fluid">

        @{Html.RenderPartial("_ServerMessage");}

        <!-- Content Header (Page header) -->

        <section class="content-header">
            <h1>
                Customer Member
            </h1>
            <ol class="breadcrumb">
                <li>Admin</li>
                <li class="active">Customer member</li>
            </ol>
        </section>

        <form id="frmCustomerMember">
            <section class="content">

                <div class="row">
                    <div id="divScrollContainer" class="col-md-12">
                        <h2 id="" class="page-header">Customer Member Details</h2>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="box box-default">
                                    <div class="box-body">

                                        <div class="row">
                                            <div class="col-md-12">

                                                <div class="col-md-12">
                                                    <h3 id="" class="page-header">Customer Members</h3>

                                                    <div class="form-group">
                                                        <label for="txtCustomerName" style="color: #333" class="">Customer Name</label>
                                                        <input type="text" class="form-control input-sm" name="" id="txtCustomerName" value="" placeholder="Enter Customer Name" />
                                                        
                                                        <input type="hidden" id="hdnCustomer_Id" value="@Model.customer.Customer_Id" name="customer.Customer_Id" class="auto-complete-value" />
                                                        <input type="hidden" id="hdnCustomer_Name" value="@Model.customer.Customer_Name" name="customer.Customer_Name" class="auto-complete-label">

                                                        <input type="hidden" id="hdntempMember_Id" value="" name="Temp_Member_Id" />

                                                    </div>

                                                    <div class="form-group">
                                                        <div class="btn btn-group">
                                                            <button type="button" id="btnAddNew" class="btn btn-success btn-sm">Add New</button>
                                                        </div>
                                                        <div class="btn btn-group pull-right">
                                                            <button type="button" id="btnUpdate" class="btn btn-warning btn-sm" style="display:none;">Update</button>
                                                        </div>
                                                    </div>

                                                    <div id="dvCustomerMember">

                                                    </div>

                                                </div>

                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-9">
                                <div class="box box-default">
                                    <div class="box-body">

                                        <div class="row">
                                            <div class="col-md-12">

                                                <div class="col-md-12">
                                                    <h3 id="" class="page-header">Add Edit Members</h3>

                                                    <input type="hidden" id="hdnMember_Id" value="" name="customer.member.Member_Id" />

                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label for="txtFirstName" style="color: #333" class="">Fisrt Name</label>
                                                                <input type="text" class="form-control input-sm" name="customer.member.First_Name" id="txtFirstName" value="" placeholder="Enter Fisrt Name" />
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label for="txtLastName" style="color: #333" class="">Last Name</label>
                                                                <input type="text" class="form-control input-sm" name="customer.member.Last_Name" id="txtLastName" value="" placeholder="Enter Last Name" />
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label for="txtEmail" style="color: #333" class="">Email</label>
                                                                <input type="text" class="form-control input-sm" name="customer.member.Email" id="txtEmail" value="" placeholder="Enter Email" />
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label for="txtContact" style="color: #333" class="">Contact</label>
                                                                <input type="text" class="form-control input-sm" name="customer.member.Contact" id="txtContact" value="" placeholder="Enter Contact" />
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label for="txtAddress" style="color: #333" class="">Address</label>
                                                                <textarea class="form-control input-sm" id="txtAddress" name="customer.member.Address" placeholder="Enter Address"></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label for="rGender" style="color: #333" class="">Gender</label>
                                                                <div class="form-group">
                                                                    <input type='radio' name="Gender" id='rMale' class='' value="M" checked/>
                                                                    <label for="rGender" style="color: #333">Male</label>
                                                                    &nbsp;&nbsp;&nbsp;
                                                                    <input type='radio' name="Gender" id='rFemale' class='' value="F" />
                                                                    <label for="rFemale" style="color: #333">Female</label>
                                                                    <input type="hidden" id="hdnGender" name="" value="" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label for="chkIsActive" style="color: #333" class="">Is Active</label><br />
                                                                <input type="checkbox" class="" id="chkIsActive" name="chkIs_Active" />
                                                                <input type="hidden" id="hdnIs_Active" name="" value="" />
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="btn-group">
                                                                <button type="button" id="btnSaveMember" class="btn btn-success btn-sm">Save</button>
                                                                <a href="@Url.Action("Search", "Customer")" type="button" id="btnCancel" class="btn btn-warning btn-sm">Cancel</a>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <br />
                                                    <h2 id="" class="page-header">Customer Event Subscription</h2>

                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <div class="box box-solid">

                                                                <div class="box-body table-responsive no-padding mdm-table">
                                                                    <table class="table table-striped" id="tblEvent">
                                                                        <tr id="subhead">
                                                                            <th>Event Name</th>
                                                                            <th>Event Type</th>
                                                                            <th>Description</th>
                                                                            <th>Location</th>
                                                                        </tr>
                                                                       
                                                                    </table>
                                                                </div>

                                                            </div>
                                                            <!-- /.box -->
                                                        </div>
                                                        <!-- /.col (left) -->
                                                    </div>

                                                </div>

                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </div>

                        

                    </div>
                </div>

            </section>
        </form>

    </div>
</div>