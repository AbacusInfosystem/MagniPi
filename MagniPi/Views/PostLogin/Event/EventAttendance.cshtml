                                                        <div class="btn btn-group">
                                                            <button type="button" id="btnViewAttendance" class="btn btn-warning btn-sm" style="display:none;">View Attendance</button>
                                                        </div>
                                                    </div>

                                                    <div id="dvEventCustomers">

                                                    </div>

                                                </div>

                                            @*</div>*@

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-9">
                                <div class="box box-default">
                                    <div class="box-body">
                                        <input type="hidden" id="hdfCurrent_Page" value="" />
										 <input type="hidden" id="hdfTotal_Pages" value="" />
                                        <div class="row">
                                            <div class="col-md-12">

                                                <div class="col-md-12">
                                                    <h2 id="" class="page-header">Event Member Attendance</h2>

                                                    <input type="hidden" id="hdnMember_Id" value="" name="customer.member.Member_Id" />

                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <div class="box box-solid">

                                                               
                                                                    <div class="box-body table-responsive no-padding mdm-table">
                                                                        @*<table class="table table-striped" id="tblEventMemberAttendance">*@
																		<table class="table table-striped">
