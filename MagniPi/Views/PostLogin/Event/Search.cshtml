@model MagniPi.Models.PostLogin.Event.EventViewModel

<script src="~/Scripts/Modules/Event/event-search-event.js"></script>
<script src="~/Scripts/Modules/Event/event-search-method.js"></script>

<div class="content-wrapper">

    <div class="container-fluid">

        @{Html.RenderPartial("_ServerMessage");}

        <!-- Content Header (Page header) -->

        <section class="content-header">
            <h1>
                Event
            </h1>
            <ol class="breadcrumb">
                <li>Admin</li>
                <li class="active">Event</li>
            </ol>
        </section>

        <form id="frmEventListing">
            <section class="content">
                <div class="row">
                    <div id="divScrollContainer" class="col-md-12">
                        <h2 id="" class="page-header">Event Listing</h2>

                        <div class="box box-default">
                            <div class="box-body">

                                <input type="hidden" id="hdnEvent_Id" name="Event.Event_Id" />
                                <input type="hidden" id="hdfCurrent_Page" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage" />

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtName" style="color: #333" class="">Name</label>
                                            <input type="text" class="form-control input-sm" name="" id="txtName" value="" placeholder="Event Name"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtMonth" style="color: #333" class="">Month</label>
                                            <input type="text" class="form-control input-sm" name="" id="txtMonth" value="" placeholder="Event Month" />
                                        </div>
                                    </div>
                                </div>

                                <div class="box-footer">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="btn-group">
                                                <button type="button" id="btnSearch" class="btn btn-instagram btn-sm">Search</button>
                                                <a href="@Url.Action("Index", "Event")" type="button" id="btnAdd" class="btn btn-success btn-sm">Add</a>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="btn-group pull-right">
                                                <button type="button" id="btnEdit" class="btn btn-warning btn-sm" style="display:none;">Edit</button>
                                                <button type="button" id="btnSubscribe" class="btn btn-success btn-sm" style="display:none;">Subscribe</button>
                                                <button type="button" id="btnAttendance" class="btn btn-success btn-sm" style="display:none;">Attendance</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="box box-solid">

                                            <div class="box-body table-responsive no-padding mdm-table">
                                                <table class="table table-striped" id="tblEvent">
                                                    <tr id="subhead">
                                                        <th></th>
                                                        <th>Name</th>
                                                        <th>Description</th>
                                                        <th>Type</th>
                                                        <th>Location</th>
                                                        <th>Is Stoped</th>
                                                        <th>Is Active</th>
                                                    </tr>

                                                </table>
                                            </div>

                                            <!-- /.box-body -->
                                            <div class="box-footer clearfix">
                                                <div class="pagination pagination-sm no-margin pull-right">
                                                </div>
                                                <div id="divSearchGridOverlay" class="overlay">
                                                    <i class="fa fa-refresh fa-spin"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /.box -->
                                    </div>
                                    <!-- /.col (left) -->
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </section>
        </form>

    </div>
</div>