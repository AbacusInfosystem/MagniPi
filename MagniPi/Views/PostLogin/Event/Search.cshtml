
<div class="content-wrapper">

    <div class="container-fluid">

        @*@{Html.RenderPartial("_ServerMessage");}*@

        <!-- Content Header (Page header) -->

        <section class="content-header">
            <h1>
                Event
            </h1>
            <ol class="breadcrumb">
                <li>Admin</li>
                <li class="active">Event</li>
            </ol>
        </section>

        <form id="frmEventListing">
            <section class="content">
                <div class="row">
                    <div id="divScrollContainer" class="col-md-12">
                        <h2 id="" class="page-header">Event Listing</h2>

                        <div class="box box-default">
                            <div class="box-body">

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="txtName" style="color: #333" class="">Name</label>
                                            <input type="text" class="form-control input-sm" name="" id="txtName" value="" placeholder="Event Name"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="box-footer">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="btn-group">
                                                <button type="button" id="btnSearch" class="btn btn-instagram btn-sm">Search</button>
                                                <a href="@Url.Action("Index", "Event")" type="button" id="btnAdd" class="btn btn-success btn-sm">Add</a>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="btn-group pull-right">
                                                <button type="button" id="btnEdit" class="btn btn-warning btn-sm">Edit</button>
                                                <a href="@Url.Action("AssignEvent", "Event")" type="button" id="btnAssignEvent" class="btn btn-success btn-sm">Assign Event</a>
                                                <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#DateModal">Attendance</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="box box-solid">

                                            <div class="box-body table-responsive no-padding mdm-table">
                                                <table class="table table-striped" id="tblEvent">
                                                    <tr id="subhead">
                                                        <th></th>
                                                        <th>Name</th>
                                                        <th>Description</th>
                                                        <th>Type</th>
                                                        <th>Location</th>
                                                        <th>Start Date Time</th>
                                                        <th>End Date Time</th>
                                                        <th>Duration</th>
                                                    </tr>
                                                    <tr id="subhead">
                                                        <th><input type="radio" name="r1" id="" class='' /></th>
                                                        <td>fsdfsd sdfds</td>
                                                        <td>xbkxfb sdgsdghsdg dfhsdyfs isdhfgisdhgs sdifuhudsf isdfdssfsdf sgfsd</td>
                                                        <td>abc</td>
                                                        <td>sdgdsg, setesfe</td>
                                                        <td>29/07/2016 11:00</td>
                                                        <td>02/08/2016 05:00</td>
                                                        <td>5 days</td>
                                                    </tr>

                                                </table>
                                            </div>

                                            <!-- /.box-body -->
                                            <div class="box-footer clearfix">
                                                <div id="divSearchGridOverlay" class="overlay">
                                                    <i class="fa fa-refresh fa-spin"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /.box -->
                                    </div>
                                    <!-- /.col (left) -->
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </section>
        </form>

        <div class="modal fade" id="DateModal" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Select Event Day</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12" id="ShowEventDates">
                                
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label><input type="radio" name="rDate" id="" class='' />&nbsp;&nbsp;01/08/2016</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label><input type="radio" name="rDate" id="" class='' />&nbsp;&nbsp;02/08/2016</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label><input type="radio" name="rDate" id="" class='' />&nbsp;&nbsp;03/08/2016</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label><input type="radio" name="rDate" id="" class='' />&nbsp;&nbsp;04/08/2016</label>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>

                    <div class="modal-footer">
                        <div class="row">
                            <div class="col-md-6 pull-right">
                                <div class="btn-group pull-right">
                                    <a href="@Url.Action("EventAttendance", "Event")" type="button" id="btnProceed" class="btn btn-success btn-sm">Proceed</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>