
<div class="content-wrapper">

    <div class="container-fluid">

        @*@{Html.RenderPartial("_ServerMessage");}*@

        <!-- Content Header (Page header) -->

        <section class="content-header">
            <h1>
                Testimonial
            </h1>
            <ol class="breadcrumb">
                <li>Admin</li>
                <li class="active">Testimonial</li>
            </ol>
        </section>

        <form id="frmAddEditTestimonial">
            <section class="content">
                <div class="row">
                    <div id="divScrollContainer" class="col-md-12">
                        <h2 id="" class="page-header">Add Edit Testimonial</h2>

                        <div class="box box-default">
                            <div class="box-body">

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtTitle" style="color: #333" class="">Title</label>
                                            <input type="text" class="form-control input-sm" name="" id="txtTitle" value="" placeholder="Enter Title"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtAuthorName" style="color: #333" class="">Author Name</label>
                                            <input type="text" class="form-control input-sm" name="" id="txtAuthorName" value="" placeholder="Author Name" />
                                        </div>
                                    </div>
                                    
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtContent" style="color: #333" class="">Content</label>
                                            <textarea class="form-control input-sm" name="" id="txtContent" placeholder="Enter Content"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtAuthorDesignation" style="color: #333" class="">Author Designation</label>
                                            <input type="text" class="form-control input-sm" name="" id="txtAuthorDesignation" value="" placeholder="Author Designation" />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Image</label>
                                            <div class="input-group">
                                                <a id="BtnBrowse" class="btn btn-default btn-sm" role="button" data-toggle="modal" data-target="#ImageModal">
                                                    <i class="fa fa-camera-retro fa-lg"></i> Browse Image
                                                </a>
                                            </div>
                                            <br />
                                            <div class="form-group">
                                                <div class="ImagePreviewBox">
                                                    <img src="http://www.kitachinderwaelt.ch/wp-content/uploads/2013/02/dummy_portrait.jpg" style="height:180px;width:180px;" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="txtAlternativeTxt" style="color: #333" class="">Alternative Text</label>
                                            <input type="text" class="form-control input-sm" name="" id="txtAlternativeTxt" value="" placeholder="Enter Alternative Text" />
                                        </div>
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="btn-group">
                                            <button type="button" id="btnSave" class="btn btn-success btn-sm">Save</button>
                                            <a href="@Url.Action("TestimonialListing", "Home")" type="button" id="btnCancel" class="btn btn-warning btn-sm">Cancel</a>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </section>


        </form>

        <div class="modal fade" id="ImageModal" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Images</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12" id="ShowImages">
                                <div class="form-group">

                                    <div class="ImagePreviewBox">
                                        <input type="radio" id="" name="Image">
                                        <img src="~/Images/default.jpg" style="width:130px; height: 113px;border: 1px solid;">

                                        <input type="radio" id="" name="Image">
                                        <img src="http://www.kitachinderwaelt.ch/wp-content/uploads/2013/02/dummy_portrait.jpg" style="width:130px; height: 113px;border: 1px solid;">
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="modal-footer">
                        <div class="row">
                            <div class="col-md-6 pull-right">
                                <div class="btn-group pull-right">
                                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Select Image</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

