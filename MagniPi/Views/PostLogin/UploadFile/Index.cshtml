
<div class="content-wrapper">

    <div class="container-fluid">

        @*@{Html.RenderPartial("_ServerMessage");}*@

        <!-- Content Header (Page header) -->

        <section class="content-header">
            <h1>
                Upload File
            </h1>
            <ol class="breadcrumb">
                <li>Admin</li>
                <li class="active">Upload File</li>
            </ol>
        </section>

        <form id="frmUploadFile" enctype="multipart/form-data">
            <section class="content">
                <div class="row">
                    <div id="divScrollContainer" class="col-md-12">
                        @*<h2 id="" class="page-header">Upload File</h2>*@

                        <div class="box box-default">
                            <div class="box-body">

                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="flUpload_File" style="color: #333" class="">Select File</label>
                                            <input type="file" class="btn btn-default btn-sm" name="" id="flUpload_File" value="" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="drpFileType" style="color: #333" class="">File Type</label>
                                            <select class="form-control input-sm" id="drpFileType" name="">
                                                <option value="">-select file type-</option>
                                                <option value="1">Image</option>
                                                <option value="2">Video</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="box-footer">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="btn-group">
                                                <button type="button" id="btnSave" class="btn btn-success btn-sm">Save</button>
                                                <a href="@Url.Action("Index", "Home")" type="button" id="btnCancel" class="btn btn-warning btn-sm">Cancel</a>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="btn-group pull-right">
                                                <button type="button" id="btnView" class="btn btn-instagram btn-sm" data-toggle="modal" data-target="#ViewImageModal">View</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="box box-solid">

                                            <div class="box-body table-responsive no-padding mdm-table">
                                                <table class="table table-striped" id="tblCustomer">
                                                    <tr id="subhead">
                                                        <th></th>
                                                        <th>Attachment Name</th>
                                                        <th>Unique Name</th>
                                                        <th>Type</th>
                                                        <th>Is Active</th>
                                                    </tr>
                                                    <tr>
                                                        <td><input type="radio" name="r1" id="" class='' checked/></td>
                                                        <td>image.png</td>
                                                        <td>image020820160119.png</td>
                                                        <td>Image</td>
                                                        <td>Yes</td>
                                                    </tr>
                                                    <tr>
                                                        <td><input type="radio" name="r1" id="" class='' /></td>
                                                        <td>video.mp4</td>
                                                        <td>video020820160120.mp4</td>
                                                        <td>Video</td>
                                                        <td>Yes</td>
                                                    </tr>
                                                    <tr>
                                                        <td><input type="radio" name="r1" id="" class='' /></td>
                                                        <td>video.mng</td>
                                                        <td>video020820160122.mng</td>
                                                        <td>Video</td>
                                                        <td>Yes</td>
                                                    </tr>
                                                    
                                                </table>
                                            </div>

                                            <!-- /.box-body -->
                                            <div class="box-footer clearfix">
                                                <div id="divSearchGridOverlay" class="overlay">
                                                    <i class="fa fa-refresh fa-spin"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /.box -->
                                    </div>
                                    <!-- /.col (left) -->
                                </div>


                            </div>
                        </div>

                    </div>
                </div>
            </section>

        </form>

        <div class="modal fade" id="ViewImageModal" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Image Preview</h4>
                    </div>

                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12" id="ShowImages">
                                <div class="form-group">
                                    <label for="imgName" style="color: #333" class="">image.png</label>
                                </div>
                                <div class="form-group">
                                    <div class="ImagePreviewBox">
                                        <img src="~/Images/default.jpg" style="border: 1px solid; height:400px; width:570px;">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <div class="row">
                            <div class="col-md-6 pull-right">
                                <div class="btn-group pull-right">
                                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>

